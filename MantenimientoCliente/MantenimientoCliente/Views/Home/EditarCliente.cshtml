@model MantenimientoCliente.ViewModel.EditarViewModel

@using MantenimientoCliente.ViewModel
@{
    ViewBag.Title = "EditarCliente";


    var Login = Session["LOGIN"] as LoginViewModel;

   
}
<h2>@ViewBag.Title</h2>
<form role="form" method="post">

    @Html.HiddenFor(X => X.ClienteId)

    <div class="form-group">
        <label>Nombre:</label>
        @Html.TextBoxFor(X => X.Nombre)
    </div>
    <div class="form-group">
        <label>Apellidos:</label>
        @Html.TextBoxFor(X => X.Apellidos)
    </div>
    <div class="form-group">
        <label>DNI:</label>
        @Html.TextBoxFor(X => X.DNI)

    </div>
    <div class="form-group">
        <label>Edad:</label>
        @Html.TextBoxFor(X => X.Edad)
    </div>
    <div class="form-group">
        <label>Sexo:</label>
        @Html.DropDownListFor(X => X.Sexo, new SelectList(new[] { "Masculino", "Femenino" }))
        
    </div>
    <div class="form-group">
        <label>Nivel de Estudios:</label>
        @Html.DropDownListFor(X => X.Nivel, new SelectList(new[] { "Escolar", "Universitario", "Superior" }))

    </div>
    <div class="form-group">
        <label>Telefono:</label>
        @Html.TextBoxFor(X => X.Telefono)
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div>
            <div class="validation-summary-errors">@TempData["Mensaje"]</div>
        </div>
    }



    <button type="submit" class="btn btn-default" onclick="return confirm('Desea Editar al cliente')">Editar</button>


    <a href="@Url.Action("LstCliente", "Home")" class="btn btn-default">Cancelar</a>

</form>

